{
  "name": "react-vui-alerts",
  "version": "0.3.0",
  "description": "React component for displaying alerts",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "npm run clean -s",
    "build:css": "node-sass --output-style expanded lib/error.scss dist/error.css && cp ./lib/*.scss ./dist/",
    "build:js": "browserify -d -x react -s react-vui-alerts ./lib/index.js | exorcist ./dist/react-vui-alerts.js.map > ./dist/react-vui-alerts.js && npm run build:js:min",
    "build:js:min": "uglifyjs ./dist/react-vui-alerts.js -o ./dist/react-vui-alerts.min.js --source-map ./dist/react-vui-alerts.min.js.map --in-source-map ./dist/react-vui-alerts.js.map",
    "build": "npm run build:css && npm run build:js",
    "clean": "rimraf dist && mkdir dist && rimraf test/coverage",
    "postinstall": "bower install",
    "test:lint:css": "csslint ./dist/*.css",
    "test:lint:js": "eslint --ext .js --ext .jsx lib",
    "test": "npm run build && npm run test:lint:css && npm run test:lint:js && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/react-valence-ui-alerts.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "react"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/react-valence-ui-alerts/issues"
  },
  "homepage": "https://github.com/Brightspace/react-valence-ui-alerts",
  "peerDependencies": {
    "react": "^0.13.3"
  },
  "dependencies": {
    "vui-alerts": "^0.1.2"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "babel-eslint": "^4.0.10",
    "bower": "^1.5.3",
    "browserify": "^11.0.1",
    "csslint": "^0.10.0",
    "eslint": "^1.2.0",
    "exorcist": "^0.4.0",
    "jest-cli": "^0.4.15",
    "node-sass": "^3.1.2",
    "react": "^0.13.3",
    "react-tools": "^0.13.3",
    "rimraf": "^2.4.2",
    "uglify-js": "^2.4.24",
    "eslint-plugin-react": "^3.4.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "stage": 0
        }
      ]
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "testDirectoryName": "test",
    "unmockedModulePathPatterns": [
      "react"
    ]
  }
}
